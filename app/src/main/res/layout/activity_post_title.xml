<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Title of the Post"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:textSize="60sp"
            android:textColor="#C03939"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/title_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#C03939"
            android:drawablePadding="5dp"
            android:ems="10"
            android:foregroundTint="#fff"
            android:hint="Title"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#9A8585" />


        <TextView
            android:id="@+id/Post_title_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i.e Fully furnished room with 1 bed"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/post_title"
            android:textSize="20sp"
            android:textColor="#C03939"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/post_title_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:text="Next"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Post_title_hint"
            android:onClick="mainActivity"/>

    </RelativeLayout>


</RelativeLayout>



